{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "${cardHeader}",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "wrap": true,
      "text": "Choose days:"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.ChoiceSet",
              "choices": [
                {
                  "title": "Monday",
                  "value": "1"
                },
                {
                  "title": "Tuesday",
                  "value": "2"
                },
                {
                  "title": "Wednesday",
                  "value": "3"
                }
              ],
              "spacing": "None",
              "id": "scheduleDays1",
              "isMultiSelect": true,
              "separator": true
            }
          ],
          "spacing": "Small"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.ChoiceSet",
              "choices": [
                {
                  "title": "Thursday",
                  "value": "4"
                },
                {
                  "title": "Friday",
                  "value": "5"
                }
              ],
              "isMultiSelect": true,
              "separator": true,
              "id": "scheduleDays2"
            }
          ]
        }
      ],
      "spacing": "Small",
      "style": "emphasis"
    },
    {
      "type": "TextBlock",
      "text": "Time:",
      "wrap": true,
      "size": "Small"
    },
    {
      "type": "Input.Time",
      "id": "scheduledTime",
      "spacing": "Small"
    },
    {
      "type": "TextBlock",
      "text": "Message:",
      "size": "Small"
    },
    {
      "placeholder": "Message to send",
      "type": "Input.Text",
      "spacing": "Small",
      "id": "messageToSend",
      "isMultiline": true
    },
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "People to @mention"
    },
    {
      "type": "Input.ChoiceSet",
      "choices.data": "$root['peopleToAtMentionData']",
      "id": "peopleToAtMention",
      "isMultiSelect": true
    },
    {
      "type": "Input.Toggle",
      "id": "messageActive",
      "spacing": "Small",
      "value": "true",
      "title": "Automated message is active",
      "separator": true
    }
  ],
  "actions": []
}

